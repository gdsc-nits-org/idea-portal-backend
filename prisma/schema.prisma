generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Idea {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  user        String
  overview    String
  description String
  tags        String[]
  progress    String
  likes       Int      @default(0) 
  comments    Comment[] 
}
model Comment {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  ideaId  String  @db.ObjectId
  user    String
  content String
  createdAt DateTime @default(now())
  idea    Idea @relation(fields: [ideaId], references: [id])
}

